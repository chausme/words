{
    "parser": "babel",
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": "*.*rc",
            "options": { "parser": "json" }
        },
        {
            "files": "*.json",
            "options": { "parser": "json" }
        },
        {
            "files": "*.scss",
            "options": { "parser": "scss", "singleQuote": false }
        },
        {
            "files": "*.css",
            "options": { "parser": "css", "singleQuote": false }
        },
        {
            "files": "*.html",
            "options": { "parser": "html" }
        },
        {
            "files": "*.md",
            "options": { "parser": "markdown" }
        }
    ]
}
